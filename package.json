{
  "name": "web-code-practice",
  "version": "1.0.0",
  "description": "HTML/CSS/TypeScript 练手项目合集",
  "main": "index.html",
  "scripts": {
    "start": "live-server",
    "watch": "tsc --project tsconfig.json --watch --sourceMap",
    "watch:sass": "sass --watch demos:dist --style compressed",
    "clean": "rimraf dist",
    "build:ts": "tsc --project tsconfig.json",
    "build:sass": "sass demos:dist --style compressed",
    "build:all": "npm run clean && npm run build:ts && npm run build:sass",
    "dev": "concurrently -n \"Server,Build,TS,Sass\" -c \"blue,yellow,green,magenta\" \"npm run start\" \"npm run build:ts\" \"npm run watch\" \"npm run watch:sass\"",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.90.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
