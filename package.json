{
  "name": "web-code-practice",
  "version": "1.0.0",
  "description": "HTML/CSS/TypeScript 练手项目合集",
  "main": "index.html",
  "scripts": {
    "start": "live-server",
    "watch": "tsc --project tsconfig.json --watch --sourceMap",
    "clean": "rimraf dist",
    "build": "tsc --project tsconfig.json",
    "build:clean": "npm run clean && npm run build",
    "dev": "concurrently -n \"Server,Build,TS\" -c \"blue,yellow,green\" \"npm run start\" \"npm run build\" \"npm run watch\"",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}
