{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debugger：launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:8080",
      "webRoot": "${workspaceFolder}",
      // 源码映射路径覆盖配置
      "sourceMapPathOverrides": {
        "webpack:///.//*": "${webRoot}/*", // webpack 源码映射
        "*/demos/*": "${workspaceFolder}/demos/*", // demos 目录映射
        "*/dist/*": "${workspaceFolder}/dist/*" // 构建目录映射
      },
      "trace": true, // 启用详细日志
      "timeout": 30000
    },
    {
      "name": "Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
